{
    "files.associations": {
        "iostream": "cpp",
        "ostream": "cpp",
        "*.tcc": "cpp",
        "chrono": "cpp",
        "deque": "cpp",
        "list": "cpp",
        "string": "cpp",
        "unordered_map": "cpp",
        "unordered_set": "cpp",
        "vector": "cpp",
        "format": "cpp",
        "*.def": "cpp"
    },
    
    "editor.fontFamily": "JetBrains Mono",
    
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "comment",
                    "comment.block",
                    "comment.line",
                    "comment.block.documentation",
                ],
                "settings": {
                    "fontStyle": "italic",
                    "foreground":"#77926d"
                }
            }
        ]
    }
}